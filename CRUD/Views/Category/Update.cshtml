@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="row pt-3 mt-4">
    <div class="col-6">
        <h2 class="text-primary">Update Category</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary"> 
            Back To Categories &nbsp; <i class="bi bi-arrow-right"></i> 
        </a>
    </div>
    &nbsp;
</div>

<div>
    <input asp-for="Id" hidden/>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

 <form method="post">

    <div class="border p-3 mt-4">

        <div class="form-group p-1">
         <label asp-for="Name"></label>
         <input type="text" asp-for="Name" class="form-control"/>
         <span asp-validation-for="Name" class="text-danger"></span>   
        </div>

        <div class="form-group  p-1">
            <label asp-for="DisplayOrder"></label>
            <input type="text" asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="form-group  p-1">
            <label asp-for="CreatedDateTime"></label>
            <input type="text" asp-for="CreatedDateTime" class="form-control" />
            <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
        </div>

        <div class="p-2">
            <button type="submit" class="btn btn-primary" style="width:150px">
                Update
            </button>
        </div>
    </div>
 </form>

@section scripts{
    @{
        <partial name="_validationScriptsPartial" />
    }
}
