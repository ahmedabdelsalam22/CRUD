@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

   <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Create Category
            </a>
        </div>
   </div>

    <hr />

    <table class="table table-hover">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Name</th>
                <th>DisplayOrder</th>
                <th>CreatedDateTime</th>
                <th>
                    Update
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category m in Model)
            {
                <tr class="table-light">
                    <td>@m.Id</td>
                    <td>@m.Name</td>
                    <td>@m.DisplayOrder</td>
                    <td>@m.CreatedDateTime</td>
                    <td>
                        <a asp-controller="Category" asp-action="Update" asp-route-id="@m.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> &nbsp; Update
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>